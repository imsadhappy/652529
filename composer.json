{
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "@php ./vendor/bin/phpunit --testdox tests",
        "app:run": "@php app.php input.txt",
        "post-install-cmd": "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    },
    "require": {
        "guzzlehttp/guzzle": "^7.0"
    }
}
